extends ../layout

block content
	main(role="main")
		section.hero.group
			h1 #{collection.title}
			button Click to play
		section.collection.group
			header.collection-header.group
				h3.collection-sub-title #{collection.title}
				h4.structural Sort tracks:
				ul(class="sort group")
					li.col.index(data-sort-type="index")
						strong.asc Index<svg viewBox="0 0 612 306"><use xlink:href="#icon-caret-asc"></use></svg>
					li.col.title(data-sort-type="title")
						span Title
					li.col.artist(data-sort-type="artist")
						span Artist
					li.col.time(data-sort-type="time")
						span Time
			h3.structural.
				Song list
			ol
				each song, index in songs
					- song = structureSong(song);

					li(class=song.available === true ? undefined : "unavailable", data-id="#{song.id}", data-index="#{index+1}", data-artist="#{song.artist}", data-title="#{song.title}")
						a(href="/#{path}/#{song.permalink}/")
							div.col.index #{index+1}
							div.col.title #{song.title}
							div.col.artist #{song.artist}
							div.col.time #{song.duration}

		footer.go-to-top
			a(href="#top") Top â†‘